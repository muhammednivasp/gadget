<%- include('../layout/user/userheader.ejs')%>
  <%- include('../layout/user/usernavbar.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>

    <section class="vh-100 gradient-custom " style="background-color: black;">
      <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-12 col-lg-9 col-xl-7">
            <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
              <div class="card-body p-4 p-md-5">
                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Add New Address</h3>
                <form action="/addAddress" method="post" onsubmit="return validateForm()">
                  <div class="row">
                    <div class="col-md-12 mb-4">

                      <div class="form-outline">
                        <input type="text" name="name" id="name" class="form-control form-control-lg" required />
                        <label class="form-label">Name</label>
                      </div>

                    </div>

                    <div class="col-md-12 mb-4">

                      <div class="form-outline">
                        <input type="text" name="hname" id="hname" class="form-control form-control-lg" required />
                        <label class="form-label">House Name</label>
                      </div>

                    </div>

                    <div class="col-md-6 mb-4">

                      <div class="form-outline">
                        <input type="text" name="street" id="street" class="form-control form-control-lg" required />
                        <label class="form-label">Street</label>
                      </div>

                    </div>
                    <div class="col-md-6 mb-4">

                      <div class="form-outline">
                        <input type="text" name="district" id="district" class="form-control form-control-lg" />
                        <label class="form-label">District</label>
                      </div>

                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4 d-flex align-items-center">

                      <div class="form-outline datepicker w-100">
                        <input type="text" name="state" id="state" class="form-control form-control-lg"
                          id="birthdayDate" required />
                        <label class="form-label">State</label>
                      </div>

                    </div>

                    <div class="col-md-6 mb-4 pb-2">

                      <div class="form-outline">
                        <input type="text" name="country" id="country" class="form-control form-control-lg" required />
                        <label class="form-label">Country</label>
                      </div>

                    </div>
                  </div>


                  <div class="row">
                    <div class="col-md-6 mb-4 pb-2">

                      <div class="form-outline">
                        <input type="Number" id="pincode" name="pincode" class="form-control form-control-lg"
                          required />
                        <label class="form-label">pincode</label>
                      </div>

                    </div>
                    <div class="col-md-6 mb-4 pb-2">

                      <div class="form-outline">
                        <input type="Number" name="number" id="number" class="form-control form-control-lg" required />
                        <label class="form-label">Phone Number</label>
                      </div>

                    </div>
                  </div>



                  <div class="mt-4 pt-2">
                    <input class="btn btn-primary btn-lg" type="submit">
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <script>
      function validateForm() {
        var name = document.getElementById("name").value.trim();
        var hname = document.getElementById("hname").value.trim();
        var street = document.getElementById("street").value.trim();
        var district = document.getElementById("district").value.trim();
        var state = document.getElementById("state").value.trim();
        var country = document.getElementById("country").value.trim();
        var pincode = document.getElementById("pincode").value.trim();
        var number = document.getElementById("number").value.trim();


        if (name == "" || hname == "" || street == "" || district == "" || state == "" || pincode == "" || country == "" || number == "") {

          Swal.fire({
            icon: 'waring',
            title: 'All fields must be filled out',

          })
          return false;
        }

        if (pincode.length != 6) {

          Swal.fire({
            icon: 'waring',
            title: 'Pincode must be 6 numbers',

          })

          return false;
        }

        if (number.length != 10) {

          Swal.fire({
            icon: 'waring',
            title: 'Phone number must be 10 numbers',

          })
          return false;
        }

        return true;
      }
    </script>

