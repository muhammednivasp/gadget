<%- include('../layout/user/userheader.ejs')%>
  <%- include('../layout/user/usernavbar.ejs')%>

    <section style="background-color: #1a1818;">
      <div class="container py-5">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
              <ol class="breadcrumb mb-0 justify-content-center">
                <h4>Profile</h4>
              </ol>
            </nav>
          </div>
        </div>
        <% if(typeof userData!=='undefined' ){ %>
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img
                    src="https://thumbs.dreamstime.com/b/default-avatar-profile-icon-vector-social-media-user-image-182145777.jpg"
                    alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3">
                    <%= userData.username %>
                  </h5>
                  <h1 class=" mb-1" style="color: rgb(32, 199, 88);">gaDget</h1>
                  <h5 class="my-3">
                    My Wallet : <%= userData.wallet %>
                  </h5>
                  <div class="d-flex justify-content-center mb-2">
                  </div>
                </div>
              </div>
              <div>
                <a href="/viewOrder"><button class="btn " style="color: aliceblue;">view Orders</button></a>
              </div>
            </div>



            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Name :</p>
                    </div>
                    <div class="col-sm-9">
                      <p class=" mb-0" style=" color:black ">
                        <%= userData.username%>
                      </p>
                    </div>
                  </div>
                  <hr>

                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                      <p class=" mb-0" style="color: black;">
                        <%= userData.email %>
                      </p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                      <p class=" mb-0" style="color: black;">
                        <%= userData.phonenumber %>
                      </p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                  </div>
                </div>
                <a style="color: rgb(11, 11, 11); text-decoration: none;" href="/address"><button type="button"
                    class="btn btn-warning mb-2 ms-0 w-100">Address</button></a>
                <a style="color: rgb(9, 9, 10); text-decoration: none;" href="/editprofile"><button type="button"
                    class="btn btn-warning mb-2 ms-0 w-100">Edit Profile</button></a>
                <a style="color: rgb(16, 17, 18); text-decoration: none;" href="/changepassword"><button type="button"
                    class="btn btn-warning mb-2 ms-0 w-100">Change Password</button></a>

              </div>
            </div>
            <%} %>
          </div>
          <% if(typeof message!=="undefined" ){%>
            <h1 style="font-size:16px;color:rgb(207, 38, 16);">
              <%=message %>
            </h1>
            <%}%>
      </div>


    </section>
    <%- include('../layout/user/userfooter.ejs')%>