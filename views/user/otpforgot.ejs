
  <%- include('../layout/admin/header.ejs')%>

  <main>
    <div class="container">

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4 ">
                <a href="" class="logo d-flex align-items-center w-auto ">
                  <img src="/assets/img/Screenshot_20230219_161051.png " alt="" height="100%" width="100%">
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4" style="color: black;">OTP</h5>
                    <p class="text-center small" style="color: black;">Enter your confirmation otp</p>
                  </div>

                  <form class="row g-3 needs-validation" novalidate method="post" action="/verifyforgot">

                    <div class="col-12">
                      <label for="yourUsername" class="form-label " style="color: black;">Otp</label>
                      <div class="input-group has-validation">

                        <input type="text" name="otp" class="form-control" id="" placeholder="otp" required>
                        <div class="invalid-feedback">Please enter your otp</div>
                      </div>
                    </div>

                    <div class="col-12">
                      <button class="btn btn-dark w-100" type="submit" value="submit">Enter</button>
                    </div>

                    <div>
                      <% if(typeof message!=="undefined" ){%>
                        <h1 style="font-size:16px;color:rgb(240, 45, 14);">
                          <%=message %>
                        </h1>
                        <%}%>
                    </div>


                  </form>

                </div>
              </div>


            </div>
          </div>
        </div>

      </section>

    </div>


  </main><!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <%- include('../layout/admin/footer.ejs')%>