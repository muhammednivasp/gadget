        </tr>
      </thead>
      <tbody>
        <% order.forEach((element,index)=> {%>

          <tr>
            <th scope="row" style="text-align: center;">
              <%= index+1 %>
            </th>

            <td style="text-align: center;">

              <% element.product.forEach((x,index)=>{ %>
                <%=x.productId.productname %>
                  <br>

                  <% }); %>
            </td>
            <td style="text-align: center;">
              <% element.product.forEach((x,index)=>{ %>

                <%=x.productId.price %>
                  <br>
                  <% }) %>
            </td>
            <td style="text-align: center;">
              <% element.product.forEach((x,index)=>{ %>
                <%=x.quantity %>
                  <br>
                  <% }); %>
            </td>
            <td style="text-align: center;">
              <%= element.totalprice %>
            </td>
            <td style="text-align: center;">
              <%= element.discount%>
            </td>
            <td style="text-align: center;">
              <%= element.total%>
            </td>
            <td style="text-align: center;">
              <%= element.paymentType%>
            </td>
            <td style="text-align: center;">
              <%= element.deliveryAddress %>
            </td>
            <td style="text-align: center;">
              <%= element.date.toLocaleString({ year: '2-digit' , month: '2-digit' ,day: '2-digit' }) %>
            </td>
            <td style="text-align: center;">
              <%= element.status %>
            </td>

            <% if(element.status=="Return requested"||element.status=="Returned") {%>
            <td data-label="Action"  style="color: red;">Order Returned </td>
            <% }else if(element.status=="Delivered" ) {%>
              <td data-label="Action"> <button onclick="returnOrder('<%= element._id%>')" class="btn btn-warning">Return</button> </td>
              <% } else{%>
              <% if( element.status != "Cancelled") {%>
            <td data-label="Action"> <button onclick="cancelOrder('<%= element._id%>')" class="btn btn-danger">Cancel</button> </td>
          <% }else{ %>
            <td data-label="Action" style="color: red;">Order cancelled</td>
            <% } %>
        
            <% } %>
          </tr>

            

          <% }); %>
      </tbody>
    </table>
  </div>
</div>
    

