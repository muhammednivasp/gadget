<%- include('../layout/user/userheader.ejs')%>
    <%- include('../layout/user/usernavbar.ejs')%>


        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img style="height: 700px;" class="d-block w-100 "
                        src="https://cdn.shopify.com/s/files/1/0627/5517/files/Collection-SEO-Chrono-Rose.jpg?7736358550476363667"
                        alt="First slide">
                    <div class="carousel-caption  d-md-block">
                        <h1>WE ARE gaDget</h1>
                        <div class="main-border-button">
                            <a href="/allproducts">Discover More</a>
                        </div>
                        <h3 style="color: rgb(255, 255, 255);">Premium &amp; Wear Standards</h3>
                    </div>
                </div>
                <%bannerdata.forEach((x)=> { %>
                    <div class="carousel-item ">
                        <img style="height: 700px;" class="d-block w-100 " src="/Images/<%=x.image%>" alt="First slide">
                        <div class="carousel-caption  d-md-block">
                            <h2>
                                <%= x.description %>
                            </h2>
                            <div class="main-border-button">
                                <a href="/category/">
                                </a>
                            </div>
                            <h3 style="color: rgb(255, 255, 255);">
                            </h3>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Start Categories of The Month -->
        <section>
            <div class="row text-center pt-4 w-100">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">Categories</h1>
                    <p>
                        Stay with Premium products,Keep standards
                    </p>
                </div>
            </div>
            <div class="row bg-black justify-content-center w-100 m-auto">
                <% categories.forEach((x,index)=> { %>
                    <% if(x && x.unlist==false) {%>
                        <div class="col-12 col-md-3 p-5 mt-3 bg-dark ">
                            <a href="/filter/<%= x._id%>">
                                <h5 class="text-center text-light mt-3 mb-3">
                                    <%= x.category %>
                                </h5>
                                <p class="text-center text-light"><a>
                                        <%= x.description %>
                                    </a></p>
                                <br>
                            </a>
                        </div>
                        <% } %>
                            <% }) %>

        </section>
        <!-- End Categories of The Month -->


        <!-- Start Featured Product-->
        <section class="bg-white">
            <div class="  p-5 ">
                <div class="row text-center py-5">
                    <div class="col-lg-6 m-auto">
                        <h1 class="h1 ">products</h1>
                        <p>
                            you can choose from here
                        </p>
                    </div>
                </div>
                <div class="row bg-white justify-content-center">

                    <% product.forEach((x,index)=> { %>
                        <% if(x && x.unlist==false && x.category && x.category.unlist==false) {%>

                            <div class="col-12 col-md-4 mb-4">
                                <div class="card h-120 bg-dark">
                                    <a href="/singleproduct/<%= x._id %>">
                                        <img style="height:500px; " src="/images/<%= x.image[0] %>" class="card-img-top"
                                            alt="...">
                                    </a>
                                    <div class="card-body">

                                        <div>
                                            <a href="" class="h2 text-decoration-none text-white">
                                                <%= x.productname %>
                                            </a>
                                        </div>
                                        <br>

                                        <ul class="list-unstyled d-flex justify-content-between">
                                            <li class=" " style="color: aliceblue;">Price:<%= x.price %>
                                            </li>
                                        </ul>
                                        <br>

                                        <div>
                                            <a href="" class="h4 text-decoration-none text-success">
                                                <%= x.category.category %>
                                            </a>
                                        </div>
                                        <p class="card-text text-white">
                                            <%= x.description %>
                                        </p>

                                        <div>

                                            <button class=" btn btn-primary"><a class="text-decoration-none text-white"
                                                    href="/singleproduct/<%= x._id %>">View Product</a></button>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% } %>
                                <% }) %>

                </div>
                <div class="row text-center pt-4">
                    <div class="col-lg-6 m-auto">
                        <button class=" btn btn-warning w-100"><a class="text-decoration-none text-white"
                                href="/allproducts">show more</a></button>
                    </div>
                </div>
            </div>
            <% if(typeof message!=="undefined" ){%>
                <h1 style="font-size:16px;color:rgb(207, 38, 16);">
                    <%=message %>
                </h1>
                <%}%>
        </section>
        <!-- End Featured Product -->

        <%- include('../layout/user/userfooter.ejs')%>