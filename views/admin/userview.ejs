<%- include('../layout/admin/header.ejs')%>
  <%- include('../layout/admin/navbar.ejs')%>
    <%- include('../layout/admin/sidebar.ejs')%>

      <main id="main" class="main">

        <div class="pagetitle">
          <h1>Product List</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Users</li>
            </ol>
          </nav>
        </div>

        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">NO</th>
              <th scope="col"> Username </th>
              <!-- <th scope="col">Address</th> -->
              <th scope="col">Email</th>
              <th scope="col"> Phonenumber</th>
              <th scope="col">status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>

          <tbody>
            <% userview.forEach((x,index)=>{ %>
              <tr>
                <td scope="row">
                  <%= index+1 %>
                </td>
                <td>
                  <%= x.username%>
                </td>
                <!-- <td>
                  <%= x.address %>
                </td> -->
                <td>
                  <%= x.email %>
                </td>
                <td>
                  <%= x.phonenumber%>
                </td>
                <td>
                  <% if(x.status==true) {%>
                    <p style="color:red">Blocked</p>
                    <%}else{%>
                      <p style="color:green">Active</p>
                      <%}%>
                </td>

                <td>
                  <% if(x.status!=true) {%>
                    <button type="button" class="btn btn-danger"><a class="text-decoration-none text-white"
                        href="/admin/userview/block/<%=x._id %>">Block</a></button>
                    <%}else{%>
                      <button class="btn btn-success"><a class="text-decoration-none text-white"
                          href="/admin/userview/unblock/<%=x._id %>">Unblock</a></button>
                      <%}%>
                </td>
              </tr>
              <% }); %>


          </tbody>
        </table>

        <div>
          <% if(typeof message!=="undefined" ){%>
            <h1 style="font-size:16px;color:rgb(182, 11, 11);">
              <%=message %>
            </h1>
            <%}%>
        </div>

      </main>
      <%- include('../layout/admin/footer.ejs')%>