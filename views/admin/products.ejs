<%- include('../layout/admin/header.ejs')%>
  <%- include('../layout/admin/navbar.ejs')%>
    <%- include('../layout/admin/sidebar.ejs')%>

      <main id="main" class="main">

        <div class="pagetitle">
          <h1>Product List</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Products view</li>
            </ol>
          </nav>
        </div>

        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">NO</th>
              <th scope="col">Product Name</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">Stock</th>
              <th scope="col">Price</th>
              <th scope="col">images</th>
              <th scope="col" style="text-align: center;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% prodDatas.forEach((x,index)=>{ %>
              <tr>
                <td scope="row">
                  <%= index+1 %>
                </td>
                <td>
                  <%= x.productname %>
                </td>
                <td>
                  <%= x.category.category %>

                </td>
                <td class="truncate">
                  <%= x.description %>
                </td>
                <td>
                  <%= x.stock %>
                </td>
                <td>
                  <%= x.price %>
                </td>
                <td>
                  <img src="/images/<%= x.image[0]%>" alt="" width="50px">
                </td>
                <td style="text-align: center;">
                  <button type="button" class="btn btn-secondary"><a class="text-decoration-none text-white"
                      href="/admin/products/productedit/<%=x._id %>">Edit</a></button>
                  <!-- <button class="btn btn-danger"><a class="text-decoration-none text-white"
                      href="/admin/products/productdelete/<%= x._id %>">Delete</a></button> -->

                  <a href="/admin/products/unlist/<%= x._id %>">
                    <% if(x.unlist==true){%>
                      <button type="button" class="btn btn-warning">
                        List
                      </button>
                      <% }else{%>
                        <button type="button" class="btn btn-warning">
                          Unlist
                        </button>
                        <% } %>
                  </a>
                </td>
              </tr>
              <% }); %>


          </tbody>
        </table>

        <div>
          <% if(typeof message!=="undefined" ){%>
            <h1 style="font-size:16px;color:rgb(185, 24, 24);">
              <%=message %>
            </h1>
            <%}%>
        </div>

      </main>
      <%- include('../layout/admin/footer.ejs')%>